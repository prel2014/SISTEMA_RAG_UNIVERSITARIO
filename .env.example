# PostgreSQL
POSTGRES_USER=upao_user
POSTGRES_PASSWORD=upao_secret_2024
POSTGRES_DB=upao_rag
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Flask
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=change-me-in-production-super-secret-key
JWT_SECRET_KEY=jwt-change-me-in-production

# Ollama (runs on host)
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=gemma3:4b
EMBEDDING_MODEL=nomic-embed-text

# pgai vectorizer (URL que usa PostgreSQL para llamar a Ollama desde dentro de Docker)
PGAI_OLLAMA_HOST=http://host.docker.internal:11434

# Admin seed
ADMIN_EMAIL=admin@upao.edu.pe
ADMIN_PASSWORD=Admin123!
ADMIN_FULL_NAME=Administrador UPAO

# RAG defaults
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5
RAG_SCORE_THRESHOLD=0.30
RAG_TEMPERATURE=0.3
RAG_NUM_CTX=4096
RAG_ENABLE_QUERY_EXPANSION=true

# Upload
MAX_UPLOAD_SIZE_MB=50
UPLOAD_FOLDER=/app/uploads

# Vision â€” image description during ingestion (requires a multimodal model like gemma3:12b)
VISION_ENABLED=true
VISION_MIN_IMAGE_SIZE=80
VISION_MAX_IMAGES_PAGE=5
